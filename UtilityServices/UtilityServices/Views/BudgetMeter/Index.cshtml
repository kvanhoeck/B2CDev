@model IEnumerable<UtilityServices.Models.BudgetMeter>


@{
    ViewBag.Title = "Budget Meter to Invoice";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>&nbsp;</h2>
            </hgroup>
            <p class="ErrorMessage">&nbsp;@ViewBag.Message</p>
        </div>
    </section>
}

 @using (Html.BeginForm("Index","BudgetMeter",FormMethod.Get)){     
    
         <table>
             <tr>
                 <td> <label>Processing Status:</label> </td>
                 <td> @Html.DropDownList("ProcessingStatus","All") </td>
                 <td> <label>EAN:</label></td>
                 <td>@Html.TextBox("EAN")   </td>
                 <td><input type="submit" value="Filter" /></td>
             </tr>
         </table>

        }
