@model UtilityServices.Models.BudgetMeter


@{
    ViewBag.Title = "Budget Meter Booking";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>&nbsp;</h2>
            </hgroup>
            <p class="ErrorMessage">&nbsp;@ViewBag.Message</p>
        </div>
    </section>
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Budget Meter</legend>
         @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ContractNo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ContractNo, new { ReadOnly = true})
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AccountNo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.AccountNo, new { ReadOnly = true})
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EAN)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EAN, new { ReadOnly = true})
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AmountIncl)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.AmountIncl, new { ReadOnly = true})
        </div>
       <div class="editor-label">
           @Html.LabelFor(model =>model.Booking)
       </div>
        <div class="Editor-field">
            @Html.CheckBoxFor(model => model.Booking)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
